<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CityWeatherView">
        <attr name="temperature" format="integer" />
        <attr name="country" format="string" />
        <attr name="cityName" format="string" />
        <attr name="dayNight" format="enum">
            <enum name="day" value="0" />
            <enum name="night" value="1" />
        </attr>
        <attr name="precipitationType" format="enum">
            <enum name="none" value="0" />
            <enum name="lightRain" value="1" />
            <enum name="heavyRain" value="2" />
            <enum name="lightSnow" value="3" />
            <enum name="heavySnow" value="4" />
        </attr>
        <attr name="windy" format="boolean" />
    </declare-styleable>
</resources>